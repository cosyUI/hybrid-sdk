<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="com.wya.hybrid">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 访问网络状态, 检测网络的可用性. -->
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- TODO ZCQ -->
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

	<!-- NOTIFICATION START -->
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.FLASHLIGHT" />
	<uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="com.huawei.android.launcher.permission.WRITE_SETTINGS" />
	<!-- NOTIFICATION END -->

	<uses-permission android:name="android.permission.SEND_SMS" />

	<application
		android:name=".base.BaseApp"
		android:allowBackup="true"
		android:label="@string/app_name"
		android:supportsRtl="true"
		tools:ignore="GoogleAppIndexingWarning">
		<activity android:name=".nativeUI.CameraActivity"></activity>
		<!-- 监听网络切换 receiver -->
		<receiver android:name=".control.NetworkReceiver">
			<intent-filter>
				<action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
				<action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
				<action android:name="android.net.wifi.STATE_CHANGE" />
			</intent-filter>
		</receiver>
		<receiver android:name=".control.BatteryReceiver">
			<intent-filter>
				<action android:name="android.content.Intent.ACTION_BATTERY_LOW" />
				<action android:name="android.content.Intent.ACTION_BATTERY_OKAY" />
				<action android:name="android.content.Intent.ACTION_BATTERY_CHANGED" />
			</intent-filter>
		</receiver>
		<receiver android:name=".control.ScreenReceiver">
			<intent-filter>
				<action android:name="android.content.Intent.ACTION_SCREEN_ON" />
				<action android:name="android.content.Intent.ACTION_SCREEN_OFF" />
				<action android:name="android.content.Intent.ACTION_USER_PRESENT" />
			</intent-filter>
		</receiver>

		<service
			android:name=".localserver.LocalService"
			android:exported="false" />

		<activity
			android:name=".methods.openwin.OpenWinActivity"
			android:theme="@style/Theme.AppCompat.NoActionBar" />

		<receiver
			android:name=".methods.notification.AlarmReceiver"
			android:process=":remote">
			<intent-filter android:priority="1000">
				<action android:name="com.start" />
			</intent-filter>
		</receiver>

		<service
			android:name=".methods.notification.AlarmService"
			android:enabled="true"
			android:process="system"></service>

	</application>

</manifest>
